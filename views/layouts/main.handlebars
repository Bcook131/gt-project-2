		{{{ body }}}
        <div id="id01" class="modal absolute w-2/3 mt-8 bg-white mx-auto" style="display: none;">
                <span onclick="toggleModal()" class="close"
                    title="Close Modal">&times;</span>
                <form class="modal-content" onsubmit="register">
                    <div class="container">
                        <h1>Sign Up</h1>
                        <p>Please fill in this form to create an account.</p>
                        <hr>
                        <label for="firstname"><b>First Name</b></label>
                        <input id="firstName" type="text" placeholder="Enter first name" name="first" required>

                        <label for="lastname"><b>Last Name</b></label>
                        <input id="lastName" type="text" placeholder="Enter last name" name="last" required>


                        <div>
                            <label for="email"><b>Email</b></label>
                            <input id="email" type="text" placeholder="Enter Email" name="email" required>
                        </div>
                        <label for="psw"><b>Password</b></label>
                        <input id="password" type="password" placeholder="Enter Password" name="psw" required>

                        <label for="psw-repeat"><b>Repeat Password</b></label>
                        <input id="re-enterPassword" type="password" placeholder="Repeat Password" name="psw-repeat"
                            required>

                        <div>
                            <label for="games"><b>Games</b></label>
                            <select id="games" placeholder="Enter Games" name="games" required>
                                {{#each games}}
                                <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                            </div>
                            <div>
                                <label for="job"><b>Occupation</b></label>
                                <select id="occupation" placeholder="Enter Occupation" name="work" required>
                                    {{#each occupations}}
                                    <option value="{{id}}">{{occupation}}</option>
                                    {{/each}}
                                </select>
                            </div>


                            <label>
                                <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px">
                                Remember me
                            </label>

                            <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms &
                                    Privacy</a>.</p>

                            <div class="clearfix">
                            <button type="button" onclick="toggleModal()"
                                class="cancelbtn">Cancel</button>
                            <button type="submit" class="signupbtn">Sign Up</button>
                </form>
            </div>
        <script>
        var modal = document.getElementById('id01');

        function toggleModal(){
            modal.style.display = modal.style.display === 'none' ? 'block' : 'none';
        }
        function register(){
            var form = modal.querySelector('form');
            console.log(form.elements)
        }

        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
